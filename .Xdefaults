!! Xft settings

Xft.dpi:                    96
Xft.antialias:              true
Xft.hinting:                true
Xft.hintstyle:              hintslight

!! rxvt-unicode (URxvt)

! General settings 
URxvt.termName:		rxvt
URxvt.visualBell:	true
URxvt.loginShell:	true
URxvt.saveLines:	100000
URxvt.internalBorder:	10
URxvt.cursorBlink:	false
URxvt.cursorUnderline:	false

! high intensity colors 
URxvt.intensityStyles:	true

! Transparency?
URxvt.depth:		32

! Don't Scroll with text
URxvt.scrollTtyOutput:	false
URxvt.scrollTtyKeypress:true
URxvt.scrollWithBuffer:	true

! Fonts
URxvt.allow_bold:	true
URxvt.font: 		xft:Hack:pixelsize=14:antialias=true,\
			!-wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1
			xft:siji:pixelsize=14:antialias=true
URxvt.boldFont: 	xft:Hack:pixelsize=14:style=bold:antialias=true

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:		default,matcher,url-select,keyboard-select,font-size
URxvt.colorUL:			#0c8c4a

! url-select
URxvt.keysym.M-u:		perl:url-select:select_next
URxvt.url-select.launcher: 	/usr/bin/xdg-open
URxvt.url-select.underline:	true

! keyboard-select:
URxvt.keysym.M-Escape:		perl:keyboard-select:activate

! resize-font
URxvt.keysym.C-Down		resize-font:smaller
URxvt.keysym.C-Up		resize-font:bigger

! Matcher
URxvt.url-launcher:		xdg-open
URxvt.matcher.button:		1

! Cursor
URxvt.cursorColor:	#00ff00
