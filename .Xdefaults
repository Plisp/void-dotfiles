!!!! Xft settings

Xft.dpi:        96
Xft.antialias:  true
Xft.hinting:    true
Xft.hintstyle:  hintslight

!!!! rxvt-unicode (URxvt)

!!! General settings
URxvt.termName:         rxvt
URxvt.visualBell:       true
URxvt.loginShell:       true
URxvt.saveLines:        100000
URxvt.internalBorder:   10
URxvt.cursorBlink:      false
URxvt.cursorUnderline:  false

!! high intensity colors
URxvt.intensityStyles:  true

!! Transparency?
URxvt.depth:  32

!! No scroll with text
URxvt.scrollTtyOutput:    false
URxvt.scrollTtyKeypress:  true
URxvt.scrollWithBuffer:   true

!! Fonts
URxvt.font:      xft:Dejavu Sans Mono:style=Regular,\
                 xft:Symbola:style=Regular
URxvt.boldFont:  xft:Dejavu Sans Mono:style=Bold

!! Scrollbar
URxvt.scrollStyle:  rxvt
URxvt.scrollBar:    false

!!! Perl extensions
URxvt.perl-ext-common:  default,url-select,keyboard-select,resize-font

!! select without keyboard
URxvt.keysym.M-u:            perl:url-select:select_next
URxvt.url-select.launcher:   /usr/bin/xdg-open
URxvt.url-select.underline:  true 

! underline links
URxvt.underlineURLs:  true
URxvt.colorUL:        #1c8c4a

!! Keyboard select
URxvt.keysym.M-s:  perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true
