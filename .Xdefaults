!!!! Xft settings

Xft.dpi:        96
Xft.antialias:  true
Xft.hinting:    true
Xft.hintstyle:  hintslight

!!!! rxvt-unicode (URxvt)

!!! General settings
URxvt.termName:         rxvt
URxvt.visualBell:       true
URxvt.loginShell:       true
URxvt.saveLines:        100000
URxvt.internalBorder:   10
URxvt.cursorBlink:      false
URxvt.cursorUnderline:  false

!! high intensity colors
URxvt.intensityStyles:  true

!! Transparency?
URxvt.depth:  32

!! No scroll with text
URxvt.scrollTtyOutput:    false
URxvt.scrollTtyKeypress:  true
URxvt.scrollWithBuffer:   true

!! Fonts
!URxvt.font:      xft:GohuFont:style=Regular:pixelsize=14,\
!                 xft:Symbola:style=Regular:pixelsize=15
!URxvt.boldFont:  xft:GohuFont:style=Bold:pixelsize=14:antialias=true

URxvt.font:      xft:Dejavu Sans Mono:style=Regular,\
                 xft:Symbola:style=Regular
URxvt.boldFont:  xft:Dejavu Sans Mono:style=Bold

!! Scrollbar
URxvt.scrollStyle:  rxvt
URxvt.scrollBar:    false

!!! Perl extensions
URxvt.perl-ext-common:  default,matcher,url-select,keyboard-select,font-size

!! Url-select

URxvt.urlLauncher:  /usr/bin/xdg-open
URxvt.keysym.M-u:   perl:url-select:select_next

! underline links
URxvt.underlineURLs:  true
URxvt.colorUL:        #0c8c4a

!! Keyboard select
URxvt.keysym.M-s:  perl:keyboard-select:search

!! resize-font (note:obtain from github)
URxvt.keysym.C-Down  resize-font:smaller
URxvt.keysym.C-Up    resize-font:bigger
