#!/bin/sh

mpc pause

B='#00000000'
C='#ffffff22'
D='#12faffdd'
T='#30ccccee'
W='#ff3d00bb'
V='#1de9b6bb'

i3lock \
	--insidevercolor=$C   \
	--ringvercolor=$V     \
	\
	--insidewrongcolor=$C \
	--ringwrongcolor=$W   \
	\
	--insidecolor=$C      \
	--ringcolor=$D        \
	--linecolor=$B        \
	--separatorcolor=$D   \
	\
	--verifcolor=$T       \
	--wrongcolor=$T       \
	--timecolor=$T        \
	--datecolor=$T        \
	--layoutcolor=$T      \
	--keyhlcolor=$V       \
	--bshlcolor=$W        \
	\
	--ignore-empty-password\
	--screen 1            \
	--blur 5              \
	--clock               \
	--indicator           \
	--timestr="%H:%M:%S"  \
	--datestr="%A, %m %Y" \
	--keylayout 2         \
